@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar - se";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

        <form id="registerForm" method="post">
            <h3>Cria uma nova conta</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


    <div class="form-floating mb-2">
                <input asp-for="Input.Nome" class="form-control" autocomplete="nome" aria-required="true" placeholder="nome" />
                <label asp-for="Input.Nome">Nome</label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>


    <div class="form-floating mb-2">
                <input asp-for="Input.Morada1" class="form-control" autocomplete="morada1" aria-required="true" placeholder="Morada 1" />
                <label asp-for="Input.Morada1">Morada 1</label>
                <span asp-validation-for="Input.Morada1" class="text-danger"></span>
            </div>

    <div class="form-floating mb-2">
        <input asp-for="Input.Morada2" id="morada2Input" class="form-control" autocomplete="morada2" placeholder="Morada 2" />
        <label asp-for="Input.Morada2">Morada 2</label>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var morada2Input = document.getElementById('morada2Input');
            var form = morada2Input.form;

            form.addEventListener('submit', function () {
                if (morada2Input.value.trim() === '') {
                    morada2Input.value = '-';  // Define o valor como um espaço em branco se estiver vazio
                }
            });
        });
    </script>

    <div class="form-floating mb-2">
        <input asp-for="Input.CodigoPostal" class="form-control" autocomplete="codigopostal" aria-required="true" placeholder="Codigo Postal" />
        <label asp-for="Input.CodigoPostal">Código postal</label>
        <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Input.Cidade" class="form-control" autocomplete="cidade" aria-required="true" placeholder="Cidade" />
        <label asp-for="Input.Cidade">Cidade</label>
        <span asp-validation-for="Input.Cidade" class="text-danger"></span>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Input.Pais" class="form-control" autocomplete="pais" aria-required="true" placeholder="Pais" />
        <label asp-for="Input.Pais">País</label>
        <span asp-validation-for="Input.Pais" class="text-danger"></span>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Input.Nif" class="form-control" autocomplete="nif" aria-required="true" placeholder="Nif" />
        <label asp-for="Input.Nif">Nif</label>
        <span asp-validation-for="Input.Nif" class="text-danger"></span>
    </div>
        

           
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
        </form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var morada2Input = document.getElementById('morada2Input');
        morada2Input.removeAttribute('data-val');
        morada2Input.removeAttribute('data-val-req');
        morada2Input.removeAttribute('aria-invalid');
    });
</script>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
